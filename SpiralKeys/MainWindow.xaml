<Window x:Class="SpiralKeys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpiralKeys"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        
        xmlns:myControls="clr-namespace:SpiralKeys.UIControls">
    <!--WindowStyle="None" AllowsTransparency="True" Background="Transparent"-->
    <Grid>
        <myControls:SpiralSelector x:Name="KeySelector"/>
        <Canvas x:Name="TestButtons" >

            <Button x:Name="Next" Content="Increment" Canvas.Left="628" Canvas.Top="32" Width="75" Click="IncrementButton_Click"/>
            <Button x:Name="Previous" Content="Decrement" Canvas.Left="530" Canvas.Top="32" Width="75" Click="DecrementButton_Click"/>
            <Button x:Name="SelectButton" Content="Select" Canvas.Left="436" Canvas.Top="32" Width="75" Click="SelectButton_Click"/>
        </Canvas>
    </Grid>
</Window>
